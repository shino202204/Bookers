<h1>Books</h1>

<h2>New book</h2>
<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book, url: '/books', method: :post do |f| %>
  <h2>タイトル</h2>
  <%= f.text_field :title %>

  <h2>本文</h2>
  <%= f.text_area :body %>

  <%= f.submit '投稿' %>
<% end %>

<% @books.each do |book| %>

<p>タイトル</p>
<span>
    <%= link_to book.title, book_path(book.id) %>
</span>

<% end %>